<h1>Sign Up Confirmation</h1>
<h3>Are you sure these values are correct?</h3>
<div class="rows">
    <div class="col-md-8">
        <p>Email: <%= @user.email %></p>
        <p>Name: <%= @user.name %></p>
        <%= button_to "Yes", {controller: "users", action: "create", params: params.to_unsafe_h}, class: 'btn btn-success' %>
        <%= button_to "No", {controller: "users", action: "new"}, class: 'btn btn-secondary', method: :get %>
    </div>
</div>